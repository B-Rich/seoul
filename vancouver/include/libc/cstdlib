#pragma once

#include <stddef.h>

#ifndef NULL
#define NULL ((void *)0)
#endif

#ifdef __cplusplus
extern "C" {
#endif
void  __exit(unsigned long status) __attribute__((noreturn));
void *malloc(size_t size);
void *realloc(void *ptr, size_t size);
void *calloc(size_t n, size_t size);
void free(void *ptr);
void *memalign(size_t boundary, size_t size);
#ifdef __cplusplus
}
#endif
